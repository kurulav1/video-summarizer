# Use official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package.json and install dependencies
COPY package.json package-lock.json ./
RUN npm install

# Copy project files
COPY . .

# Build the React app
RUN npm run build

# Expose frontend port
EXPOSE 5173

# Start the app using serve
CMD ["npx", "serve", "-s", "build", "-l", "5173"]
