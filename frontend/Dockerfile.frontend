FROM node:18-alpine

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm install --legacy-peer-deps

COPY . .

RUN npm install --save-dev typescript @types/react @types/react-dom vite

RUN npm run build

EXPOSE 5173

CMD ["sh", "-c", "test -d dist || npm run build && npx serve -s dist -l 5173"]
